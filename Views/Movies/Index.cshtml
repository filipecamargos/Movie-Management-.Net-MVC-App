@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<hr style="margin-top: 25px" />
<h2>Movie Management</h2>
<hr style="margin-bottom: 15px"/>

<p>
    <a asp-action="Create" class="btn btn-outline-info">Add New Movie</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get" style="display: flex; margin-bottom: 15px">
    <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-control" style="width: 120px">
        <option value="" disabled selected>Sort By</option>
        <option value="">All</option>
        <option value="Date">Date</option>
    </select>
    <input placeholder="Search in Title" type="text" asp-for="SearchString" class="form-control" style="width: 150px; margin-left: 12px" />
    <input type="submit" value="Filter" class="btn btn-outline-success" style="margin-left: 5px;"/>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>